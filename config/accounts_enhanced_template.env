# SocialFlow AI - Enhanced Configuration with Web Providers
# Copy this to config/accounts.env and fill in your values

# === Angel One Trading APIs ===
ANGEL_TRADING_KEY=your_trading_key_here
ANGEL_PUBLISHER_KEY=your_publisher_key_here  
ANGEL_MARKET_KEY=your_market_key_here
ANGEL_HISTORICAL_KEY=your_historical_key_here
ANGEL_CLIENT_ID=your_client_id_here
ANGEL_MPIN=your_mpin_here
ANGEL_TOTP_SECRET=your_totp_secret_here

# === Binance ===
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# === Telegram ===
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# === AI Services (Multiple Keys for Rotation) ===
# Separate multiple keys with commas for automatic rotation
OPENAI_API_KEYS=your_openai_key1,your_openai_key2,your_openai_key3
GEMINI_API_KEYS=your_gemini_key1,your_gemini_key2
PERPLEXITY_API_KEYS=your_perplexity_key1,your_perplexity_key2

# === Web Provider Cookies (Optional - for free tier usage) ===
# These are set automatically by running: python setup_cookies.py
PERPLEXITY_COOKIE_FILE=accounts/perplexity_cookies.json
CHATGPT_COOKIE_FILE=accounts/chatgpt_cookies.json
GEMINI_COOKIE_FILE=accounts/gemini_cookies.json

# === Reddit ===
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# === Instagram ===
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# === GitHub ===
GITHUB_TOKEN=your_github_token_here

# === Automation Settings ===
# Content generation schedule (cron format)
CONTENT_GENERATION_SCHEDULE=0 8 * * *  # Daily at 8 AM
EXECUTION_SCHEDULE=0 10 * * *           # Daily at 10 AM

# LLM Provider Preferences (comma-separated priority order)
LLM_PROVIDER_PRIORITY=openai,perplexity,gemini,perplexity_web,chatgpt_web,gemini_web

# Rate limiting
MAX_DAILY_LLM_CALLS=100
MAX_HOURLY_LLM_CALLS=20

# Content quality settings
ENABLE_CONTENT_VALIDATION=true
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=2000
